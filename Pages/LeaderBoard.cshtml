@page
@model SimpleApp.Pages.LeaderBoardModel
@{
    ViewData["Title"] = "LeaderBoard";
}

<div class="leaderboard-container">
    <h1 class="page-title">
        <i class="fas fa-trophy me-2"></i>
        Topplista
    </h1>

    @if (Model.Users != null && Model.Users.Any())
    {
        <div class="table-container">
            <table class="leaderboard-table">
                <thead>
                    <tr>
                        <th class="rank">#</th>
                        <th>Namn</th>
                        <th class="points">Poäng</th>
                    </tr>
                </thead>
                <tbody>
                    @{var rank = 1;}
                    @foreach (var user in Model.Users.OrderByDescending(u => u.Points))
                    {
                        <tr class="@(rank <= 3 ? $"top-{rank}" : "")">
                            <td class="rank">
                                @if (rank <= 3)
                                {
                                    <i class="fas @(rank == 1 ? "fa-crown" : "fa-medal") rank-icon"></i>
                                }
                                @rank
                            </td>
                            <td class="user-name">@user.FirstName</td>
                            <td class="points">@user.Points</td>
                        </tr>
                        rank++;
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="no-data-message">
            <i class="fas fa-users mb-3"></i>
            <p>Det finns inga användare än.</p>
        </div>
    }
</div>

<style>
    .leaderboard-container {
        max-width: 900px;
        margin: 0 auto;
        padding: clamp(1rem, 3vw, 2rem);
        min-height: calc(100vh - 160px);
        background: linear-gradient(135deg, #37003c 0%, #520066 100%);
        color: white;
        border-radius: clamp(8px, 2vw, 16px);
    }

    .page-title {
        text-align: center;
        font-size: clamp(1.5rem, 4vw, 2.5rem);
        margin-bottom: clamp(1.5rem, 3vw, 2rem);
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .table-container {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: clamp(0.5rem, 2vw, 1.5rem);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .leaderboard-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        color: white;
    }

    .leaderboard-table th {
        background: rgba(255, 255, 255, 0.1);
        padding: 1rem;
        font-weight: 600;
        text-align: left;
        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
    }

    .leaderboard-table td {
        padding: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .leaderboard-table tr:hover {
        background: rgba(255, 255, 255, 0.05);
    }

    .rank {
        width: 80px;
        text-align: center;
        font-weight: 600;
    }

    .points {
        text-align: right;
        font-weight: 600;
        color: #00ff85;
    }

    .user-name {
        font-weight: 500;
    }

    /* Top 3 Styling */
    .top-1 {
        background: rgba(255, 215, 0, 0.1);
    }

    .top-2 {
        background: rgba(192, 192, 192, 0.1);
    }

    .top-3 {
        background: rgba(205, 127, 50, 0.1);
    }

    .rank-icon {
        margin-right: 0.5rem;
        color: #00ff85;
    }

    .top-1 .rank-icon {
        color: #ffd700;
    }

    .top-2 .rank-icon {
        color: #c0c0c0;
    }

    .top-3 .rank-icon {
        color: #cd7f32;
    }

    .no-data-message {
        text-align: center;
        padding: 3rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .no-data-message i {
        font-size: 3rem;
        color: rgba(255, 255, 255, 0.5);
        margin-bottom: 1rem;
        display: block;
    }
</style>

